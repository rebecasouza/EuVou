<!DOCTYPE html>
<html>
<head>
  <title>Ppds</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <!-- Sign in with Facebook -->

  <% if current_user %>
    Signed in as <strong><%= current_user.name %></strong>!
    <%= link_to "Sign out", signout_path, id: "sign_out" %>
  <% else %>
  <%= link_to "Login com o Facebook", user_omniauth_authorize_path(:facebook), id: "sign_in" %>
  <%= link_to "Login com o Twitter", user_omniauth_authorize_path(:twitter), id: "sign_in" %>
  <% end %>
  
<div id="status">
</div>

<!--Fim Facebook SDK configuration -->

	   <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>

<% if user_signed_in? %>
  <li>
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
  </li>
<% else %>
  <li>
  <%= link_to('Login', new_user_session_path)  %>  
  </li>
<% end %>



<%= link_to "Sing Up", new_user_registration_path %>




<%= yield %>

</body>
</html>
